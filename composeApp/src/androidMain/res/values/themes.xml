<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NightAdjusted.Theme.OL" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowLightStatusBar" >true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="PlatformAdjusted.Theme.OL" parent="NightAdjusted.Theme.OL">
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Theme.OL" parent="PlatformAdjusted.Theme.OL" />

    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar" >true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="Theme.OL.Splash" parent="NightAdjusted.Theme.Splash">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_background</item>
        <item name="postSplashScreenTheme">@style/Theme.OL</item>
    </style>

</resources>